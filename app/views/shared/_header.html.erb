<%# CSS・・・assets/stylesheets/shared/header.css %>
<header class="bg-dark">
  <div class="navbar navbar-dark bg-dark shadow-sm">
    <div class="container">
      <div class="navbar-brand d-flex align-items-center">
        <%= link_to root_path, class:"text-white" do %>
          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-app" viewBox="0 0 16 16">
            <path d="M11 2a3 3 0 0 1 3 3v6a3 3 0 0 1-3 3H5a3 3 0 0 1-3-3V5a3 3 0 0 1 3-3h6zM5 1a4 4 0 0 0-4 4v6a4 4 0 0 0 4 4h6a4 4 0 0 0 4-4V5a4 4 0 0 0-4-4H5z"/>
          </svg>
        <% end %>
        <%= link_to "e-supplier", root_path, class:"link navbar-brand fw-bold" %>
      </div>

      <div>
        <% if buyer_signed_in? %>
          <%= link_to "ログアウト", destroy_buyer_session_path, method: :delete, class:"link text-white" %>
        <% elsif supplier_signed_in? %>
          <%= link_to "ログアウト", destroy_supplier_session_path, method: :delete, class:"link text-white" %>
        <% else %>
          <div class="log-in-menu">
            <span class="navbar-brand text-white fw-bold">Log-in</span>
            <ul class="sub-menu">
              <li>
                <%= link_to "Maker / Buyer", new_buyer_session_path, class:"link font-color hover-font-color" %>
              </li>
              <li>
                <%= link_to "Supplier", new_supplier_session_path, class:"link font-color hover-font-color" %>
              </li>
            </ul>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</header>