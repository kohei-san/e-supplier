<%= render "shared/header" %>

<body class="bg-light">

<div class="container pt-5">
  <div class="d-flex justify-content-center">
    <div class="form">
      <%= form_with model: @part, local: true do |f| %>
        <div class='container text-center mt-5 mb-3'>
          <h2 class="fw-bold">
            部品 新規出品
          </h2>
          <p><span class="must-fill">*</span>は必須入力項目です</p>
          <%# errorメッセージを'shared/error_messages'から引用 %>
          <%= render 'shared/error_messages', model: f.object %>
        </div>

        <%# 入力フォーム %>
        <div class="">
          <div class="row form-group px-2">
            <div>
              <label class="">名称</label>
              <span class="must-fill">*</span>
            </div>
            <%= f.text_field :name, class:"form-control", placeholder:"例)自動車用ピストンヘッド", maxlength: "40" %>
          </div>

          <div class="row my-3 d-flex justify-content-between">
            <div class="col-2">
              <label class="form-label">納期</label>
              <span class="must-fill">*</span>
              <%= f.collection_select(:deadline_id, Deadline.all, :id, :name, {}, {class:"form-select"}) %>
            </div>

            <div class="col-2">
              <label class="form-label">材料</label>
              <span class="must-fill">*</span>
              <%= f.collection_select(:material_id, Material.all, :id, :name, {}, {class:"form-select"}) %>
            </div>

            <div class="col-2">
              <label class="form-label">工程</label>
              <span class="must-fill">*</span>
              <%= f.collection_select(:processing_id, Processing.all, :id, :name, {}, {class:"form-select"}) %>
            </div>
          </div>

        </div>


        <div class="row form-group g-1 mb-5">
          <div>
            <label>詳細</label>
            <span class="must-fill">*</span>
          </div>
          <%= f.text_area :info, placeholder:"1000字以内でご記入ください。", class:"form-control" , maxlength: "1000" %>
        </div>


          <div class="">
            <label class="form-label">参考画像</label>
            <%= f.file_field :image %>
          </div>

        <div class="row mt-4 g-1">
          <%= f.submit "出品" ,class:"btn-outline-primary" %>
        </div>    
      <% end %>  
    </div>
  </div>
</div>


<%= render "shared/footer" %>