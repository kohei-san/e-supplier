<%= render "shared/header" %>

<section class="text-center">
  <div class="row position-relative">
  <%= image_tag "https://cdn.pixabay.com/photo/2014/09/13/21/46/milling-444493_960_720.jpg", class:"top-image" %>
    <div class="col-lg-6 col-md-8 mx-auto position-absolute top-title">
      <h1 class="app-title">e-supplier</h1>
      
      <%# ログインするユーザー(buyer/supplier)によって表示を変更する %>
      <% if buyer_signed_in? %>
        <p class="lead my-3"><%= "こんにちは#{current_buyer.name}さん" %></p>
        <%= link_to "部品を出品する", new_part_path, class:"btn btn-primary" %>
      <% elsif supplier_signed_in? %>
        <p class="lead"><%= "こんにちは#{current_supplier.name}さん" %></p>
        <%= link_to "新着部品を確認する", new_part_path, class:"btn btn-primary" %>
      <% else %>
        <p class="lead">さあ、新しいパートナーを探しましょう</p>
        <p>
          <%= link_to  "メーカー、バイヤー様新規登録", new_buyer_registration_path, class: "btn btn-primary my-2" %>
          <%= link_to "サプライヤー様新規登録", new_supplier_registration_path, class: "btn btn-secondary my-2" %>
        </p>
      <% end %>
    </div>
  </div>
</section>

<div class="album py-5 bg-light">
  <div class="container">

    <%# リスト１段目 %>
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
      <div class="col">
        <div class="card shadow-sm">
          <svg class="bd-placeholder-img card-img-top" width="100%" height="225" xmlns="http://www.w3.org/2000/svg" role="img" aria-label="Placeholder: Thumbnail" preserveAspectRatio="xMidYMid slice" focusable="false"><title>Placeholder</title><rect width="100%" height="100%" fill="#55595c"/><text x="50%" y="50%" fill="#eceeef" dy=".3em">Thumbnail</text></svg>

          <div class="card-body">
            <p class="card-text">これは写真の解説文付きのカードです。自然に説明を加えることができます。しかしこの文章は少し長いかもしれません。</p>
            <div class="d-flex justify-content-between align-items-center">
              <div class="btn-group">
                <button type="button" class="btn btn-sm btn-outline-secondary">見る</button>
                <button type="button" class="btn btn-sm btn-outline-secondary">編集</button>
              </div>
              <small class="text-muted">9分</small>
            </div>
          </div>
        </div>
      </div>

      

    </div>
  </div>
</div>

<%= render "shared/footer" %>